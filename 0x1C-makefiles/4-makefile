CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# makes executable
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# delete tmp files & executables
clean:
	$(RM) *~ $(NAME)

# delete object files
oclean:
	$(RM) $(OBJ)

# delete temp, executable & obj files
fclean: clean oclean

# delete all & recompile all source files
re: oclean all
